// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "prettier": {
    "allowed": true,
  },
  "indent_guides": {
    "coloring": "indent_aware",
  },
  // Soft-wrap and rulers
  "soft_wrap": "editor_width", // none, editor_width, preferred_line_length, bounded
  "preferred_line_length": 80, // Column to soft-wrap
  "show_wrap_guides": true, // Show/hide wrap guides (vertical rulers)
  "wrap_guides": [78, 100], // Where to position wrap_guides (character counts)
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "icon_theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "Dracula Pro (Alucard)",
    "dark": "Dracula Pro",
  },
  "file_types": {
    "Ansible": [
      "**.ansible.yml",
      "**.ansible.yaml",
      "**/defaults/*.yml",
      "**/defaults/*.yaml",
      "**/meta/*.yml",
      "**/meta/*.yaml",
      "**/tasks/*.yml",
      "**/tasks/*.yaml",
      "**/handlers/*.yml",
      "**/handlers/*.yaml",
      "**/group_vars/*.yml",
      "**/group_vars/*.yaml",
      "**/playbooks/*.yaml",
      "**/playbooks/*.yml",
      "**playbook*.yaml",
      "**playbook*.yml",
    ],
  },
  "languages": {
    "HTML": {
      "formatter": "language_server",
    },
  },
}
