_JAVA_AWT_WM_NONREPARENTING=1
GDK_BACKEND,wayland,x11
MOZ_ENABLE_WAYLAND=1
PATH=$HOME/.local/bin:$HOME/.cargo/bin:$confDir/scripts:$PATH

QT_QPA_PLATFORM=wayland
QT_QPA_PLATFORMTHEME=qt6ct
QT_WAYLAND_DISABLE_WINDOWDECORATION=1

GDK_SCALE=1
QT_AUTO_SCREEN_SCALE_FACTOR=1

# Arch linux fix for KDE6 mime types not showing in Dolphin
XDG_MENU_PREFIX=arch-

export _JAVA_AWT_WM_NONREPARENTING GDK_BACKEND MOZ_ENABLE_WAYLAND PATH
export QT_QPA_PLATFORM QT_QPA_PLATFORMTHEME QT_WAYLAND_DISABLE_WINDOWDECORATION
export GDK_SCALE QT_AUTO_SCREEN_SCALE_FACTOR
export XDG_MENU_PREFIX
